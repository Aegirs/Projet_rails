.row
  .col-md-4
  .col-md-8
    .transparent
      %h2
        Edition du profil #{current_user.pseudo.to_s}
      = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put },:defaults => { :wrapper_html => {:class => 'form-group'}, :input_html => { :class => 'form-control' } }) do |f|
        = devise_error_messages!
        %div
          = f.label 'Photo'
          %br/
          = image_tag current_user.avatar.url(:medium)
          = f.file_field :avatar
        %div
          #titre= f.input :email, :autofocus => true
          #titre=f.input :nom
          #titre=f.input :prenom, :autofocus => true
          #titre=f.input :pseudo, :autofocus => true
          #titre= f.input :password, :autocomplete => "off"
          #titre= f.input :password_confirmation
          %i (Votre ancien mot de passe pour valider les changements)
          %br/
          #titre= f.input :current_password
        %br/
        %div= f.button :submit, "Mettre à jour", :class => "btn-primary"
        %br/
      .row
        .col-md-4
          #{button_to "Supprimer mon compte", registration_path(resource_name), :data => { :confirm => "Etes-vous sûr ?" }, :method => :delete, :class => "btn-danger"}
        .col-md-2
          #retour= button_to "Retour", :back
