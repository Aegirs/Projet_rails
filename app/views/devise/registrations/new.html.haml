.row
  .col-md-4
  .col-md-8
    .transparent
      %h2 Inscription
      = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name),:defaults => { :wrapper_html => {:class => 'form-group'}, :input_html => { :class => 'form-control' } }) do |f|
        = devise_error_messages!
        #titre= f.input :email, :autofocus => true
        #titre= f.input :nom
        #titre= f.input :prenom
        #titre= f.input :pseudo
        #titre= f.input :password
        #titre= f.input :password_confirmation
        %div
          %label.checkbox-inline
            %input#inlineCheckbox1{type: "radio", name: "sexe", id:"sexe1", value: "Homme", checked: "checked"}
            Homme
          %label.checkbox-inline
            %input#inlineCheckbox2{type: "radio", name: "sexe", id:"sexe2", value: "Femme"}
            Femme
        %br/
        %input.form-control{name: "ddn", placeholder: "JJ/MM/AAAA", type: "integer",style:"width:15%"}
        %br/
        %div
          = f.label 'Photo'
          %br/
          = f.file_field :avatar
        =f.button :submit ,'S\'inscrire', :class => "btn-primary"