.row
  .col-md-4
  .col-md-8
    .transparent
      %h1 Connexion
      = simple_form_for(resource, as: resource_name, url: session_path(resource_name),:defaults => { :wrapper_html => {:class => 'form-group'}, :input_html => { :class => 'form-control' } }) do |f|
        #titre= f.input :email, placeholder: "Adresse email" , class: "email_field"
        #titre= f.input :password, placeholder: "Mot de passe", class: "password_field" 
        - if devise_mapping.rememberable?
          %div
            = f.check_box :remember_me
            = f.label "Se souvenir de moi"
        = f.button :submit, 'Se connecter', :class => "btn btn-primary"
        %br/
        - if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
          = link_to "Mot de passe oubli√©?", new_password_path(resource_name)
        - if devise_mapping.registerable? && controller_name != 'registrations'
          %br/
          = link_to "S'inscrire", new_registration_path(resource_name)


