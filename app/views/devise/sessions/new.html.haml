%h1 Connexion

= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  %div
    = f.label :email
    %br/
    = f.email_field :email, placeholder: "Adresse email" , class: "email_field"
  %div
    = f.label :password
    %br/
    = f.password_field :password, placeholder: "Mot de passe", class: "password_field"
  
  - if devise_mapping.rememberable?
    %div
      = f.check_box :remember_me
      = f.label "Se souvenir de moi"
  %div= f.submit "Se connecter", class: "btn btn-primary"
  - if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
    = link_to "Mot de passe oubli√©?", new_password_path(resource_name)
  - if devise_mapping.registerable? && controller_name != 'registrations'
    %br/
    = link_to "S'inscrire", new_registration_path(resource_name)


