!!!
%html
  %head
    %title Projet
    = stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags
    %link{href: "//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css", rel: "stylesheet"}/
    %link{href: "//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap-theme.min.css", rel: "stylesheet"}/
    %script{src: "//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"}
    %script{src: "//maps.google.com/maps/api/js?v=3.13&sensor=false&libraries=geometry", type: "text/javascript"}
    %script{src: "//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js", type: "text/javascript"}
      
  %body
    .jumbotron
      .container
      .row
        .col-md-10
          %font{size: '100% auto'}
            Coloclify
        .col-md-2        
          %p.navbar-text.pull-right
          - if user_signed_in?
            = succeed "" do
              %font{color: "green"}
                %strong= current_user.pseudo
              connecté
              %br/
            %strong
              = link_to "Se déconnecter", destroy_user_session_path, method: :delete, :class => 'navbar-link'
              %br/
              = link_to 'Mon compte', comptes_path, :class => 'navbar-link'
              
          - else
            = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
              = f.email_field :email, placeholder: "Adresse email", :autofocus => true, class: "email_field" 
              = f.password_field :password, placeholder: "Mot de passe", class: "password_field"
              = f.submit "Se connecter", class: "btn btn-primary", style: "font-size:80%"
              %br/
              - if devise_mapping.rememberable?
                = f.check_box :remember_me
                = f.label :remember_me
              %br/
            - if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
              = link_to "Mot de passe oublié?", new_password_path(resource_name)
            - if devise_mapping.registerable? && controller_name != 'registrations'
              %br/
              = link_to "S'inscrire", new_registration_path(resource_name)
    -@current_url = request.env['PATH_INFO']
    %ul.nav.nav-tabs.nav-justified
      -if @current_url.index("/acceuil") || @current_url.index("/users/sign_in") 
        %li.active
          %a{href: "/acceuil"} Home
      -else
        %li
          %a{href: "/acceuil"} Home
      -if @current_url == "/" 
        %li.active
          %a{href: "/"} Carte
      -else
        %li
          %a{href: "/"} Carte             
    .row
      .col-md-2
        -if @current_url.index("/comptes") || @current_url.index("/users") || @current_url.index("/messages") || @current_url.index("/colocations/new")
          %ul.nav.nav-pills.nav-stacked
            -if @current_url.index("/comptes")
              %li.active
                %a{href: "/comptes"} Mes colocations
              .row
                .col-md-8
                  %ul.nav.nav-pills.nav-stacked
                    %li
                      %a{href: "/colocations/new"}
                        Ajouter Colocation
            -else
              %li
                %a{href: "/comptes"} Mes colocations
              .row
                .col-md-8
                  %ul.nav.nav-pills.nav-stacked
                    -if @current_url == "/colocations/new" 
                      %li.active
                        %a{href: "/colocations/new"}
                          Ajouter Colocation
                       
            -if @current_url == "/users/edit" 
              %li.active
                %a{href: "/users/edit"} Informations
            -else
              %li
                %a{href: "/users/edit"} Infomations
            -if @current_url.index("/messages") 
              %li.active
                %a{href: "/messages"} Messages
            -else
              %li
                %a{href: "/messages"} Messages   
            
        -else
          %ul.nav.nav-pills.nav-stacked
            
        
      .col-md-10
        - if notice
          %p.alert.alert-notice= notice
        - if alert
          %p.alert.alert-error= alert
        .milieu
          = yield
    %div
      .jumbotron.masthead
