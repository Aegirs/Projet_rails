!!!
%html
  %head
    %title Projet
    = stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags
    %link{href: "//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css", rel: "stylesheet"}/
    %link{href: "//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap-theme.min.css", rel: "stylesheet"}/
    %script{src: "//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"}
    %script{src: "//maps.google.com/maps/api/js?v=3.13&sensor=false&libraries=geometry", type: "text/javascript"}
    %script{src: "//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js", type: "text/javascript"}
      
  %body
    .jumbotron
      .container
      .row
        .col-md-8
          %font{size: '100% auto'}
            Weblycoloc
        .col-md-4        
          %p.navbar-text.pull-right
          - if user_signed_in?
            = succeed "" do
              %strong= current_user.pseudo
              connecté
              %br/
            %strong
              = link_to "Se déconnecter", destroy_user_session_path, method: :delete, :class => 'navbar-link'
              %br/
              = link_to 'Editer profil', edit_user_registration_path, :class => 'navbar-link'
              
          - else
            = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
              = f.email_field :email, placeholder: "Adresse email", :autofocus => true, class: "email_field" 
              = f.password_field :password, placeholder: "Mot de passe", class: "password_field"
              = f.submit "Se connecter", class: "btn btn-primary", style: "font-size:80%"
              %br/
              - if devise_mapping.rememberable?
                = f.check_box :remember_me
                = f.label :remember_me
              %br/
            - if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
              = link_to "Mot de passe oublié?", new_password_path(resource_name)
            - if devise_mapping.registerable? && controller_name != 'registrations'
              %br/
              = link_to "S'inscrire", new_registration_path(resource_name)
    -@current_url = request.env['PATH_INFO']
    %ul.nav.nav-tabs.nav-justified
      -if @current_url.index("/acceuil") || @current_url.index("/users/sign_in") 
        %li.active
          %a{href: "/acceuil/index"} Home
      -else
        %li
          %a{href: "/acceuil/index"} Home
      -if @current_url == "/" 
        %li.active
          %a{href: "/"} Carte
      -else
        %li
          %a{href: "/"} Carte
      -if @current_url.index("/messages") 
        %li.active
          %a{href: "/messages/index"} Messages
      -else
        %li
          %a{href: "/messages/index"} Messages                
    .row
      .col-md-2
        %ul.nav.nav-pills.nav-stacked
          %li.active
            %a{href: "/colocations/new"}
              Ajouter Colocation
        
      .col-md-8
        - if notice
          %p.alert.alert-notice= notice
        - if alert
          %p.alert.alert-error= alert
        .milieu
          = yield
    %div
      .jumbotron.masthead
